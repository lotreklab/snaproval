// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Job {
  id             String   @id @map("_id") @default(auto()) @db.ObjectId
  jobId          String   @unique
  sitemapUrl     String
  totalUrls      Int
  processedUrls  Int      @default(0)
  isRunning      Boolean  @default(true)
  status         String   @default("running") // running, completed, cancelled
  highlightLinks Boolean  @default(true)
  startTime      DateTime
  completedTime  DateTime?
  zipPath        String?
  zipSize        Int?
  pdfPath        String?
  urls           Url[]
  width         String?

  @@map("jobs")
}

model Url {
  id          String   @id @map("_id") @default(auto()) @db.ObjectId
  url         String
  status      String   @default("to_do") // to_do, completed
  imagePath   String?
  job         Job      @relation(fields: [jobId], references: [jobId])
  jobId       String
  processedAt DateTime?

  @@map("urls")
}
